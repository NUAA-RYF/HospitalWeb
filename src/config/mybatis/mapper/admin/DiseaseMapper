<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http:mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ischoolbar.programmer.dao.admin.DiseaseDao">
    <!-- 疾病信息列表 -->
    <resultMap id="DiseaseMap" type="Disease">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="name" property="name"/>
        <result column="phone" property="phone"/>
        <result column="gender" property="gender"/>
        <result column="address" property="address"/>
        <result column="diseaseName" property="diseaseName"/>
        <result column="diseaseInfo" property="diseaseInfo"/>
    </resultMap>

    <!-- 按用户名查找疾病 -->
    <select id="findByUserName" parameterType="String" resultType="DiseaseMap">
        select * from tb_disease where username = #{username}
    </select>

    <!-- 按疾病ID删除疾病信息 -->
    <delete id="deleteById" parameterType="int">
        delete from tb_disease where id = #{id}
    </delete>

    <!-- 插入疾病信息 -->
    <insert id="addInfo" parameterType="Disease">
        insert into tb_disease(id,username,name,phone,gender,address,diseaseName,diseaseInfo) values(null,#{username},#{name},#{phone},#{gender},#{address},#{diseaseName},#{diseaseInfo})
    </insert>
</mapper>